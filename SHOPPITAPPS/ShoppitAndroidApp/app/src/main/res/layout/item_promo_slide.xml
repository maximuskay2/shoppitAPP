<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_promo_green"
    android:padding="16dp">

    <TextView
        android:id="@+id/promoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Big Savings This Week!"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/promoDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Up to 25% off top categories â€” electronics, beauty, and more."
        android:textColor="@color/white"
        android:fontFamily="@font/medium"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/promoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/promoImage"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shopNowBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Shop Deals"
        android:textColor="@color/primary_color"
        android:background="@drawable/btn_register"
        android:textAllCaps="false"
        android:fontFamily="@font/medium"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/promoDesc"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/promoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sales_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
