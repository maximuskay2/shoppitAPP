<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        tools:context=".consumer.fragment_gift_form">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:padding="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Send as a gift"
                android:textColor="@color/black"
                android:fontFamily="@font/medium"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_gift" />

        <!-- Sender Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:text="Who's sending this gift?"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/medium"/>

        <EditText
            android:id="@+id/etSenderName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="Name"
            android:textSize="14sp"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/medium"
            android:background="@drawable/text_input_bg"
            android:padding="16dp" />

        <!-- Recipient Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Who's the gift for?"
            android:textColor="@color/black"
            android:fontFamily="@font/medium"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/etRecipientName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="Name"
            android:textSize="14sp"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/medium"
            android:background="@drawable/text_input_bg"
            android:padding="16dp" />

        <EditText
            android:id="@+id/etRecipientPhone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/medium"
            android:background="@drawable/text_input_bg"
            android:padding="16dp" />

        <EditText
            android:id="@+id/etRecipientEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:hint="Email"
            android:textSize="14sp"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/medium"
            android:inputType="textEmailAddress"
            android:background="@drawable/text_input_bg"
            android:padding="16dp" />

        <!-- Special Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Add a special message (Optional)"
            android:textColor="@color/black"
            android:fontFamily="@font/medium"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/etGiftMessage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:hint="Gift message..."
            android:gravity="top"
            android:textSize="14sp"
            android:textColorHint="@color/hint_color"
            android:fontFamily="@font/medium"
            android:background="@drawable/text_input"
            android:padding="16dp" />

        <!-- Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveGift"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_register"
            android:fontFamily="@font/medium"
            android:layout_marginBottom="40dp"
            android:text="Save details"
            android:textColor="@android:color/white"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>