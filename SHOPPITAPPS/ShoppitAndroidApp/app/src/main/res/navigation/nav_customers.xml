<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_customers"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.shoppitplus.shoppit.consumer.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_home_to_deliveryAddress"
            app:destination="@id/deliveryAddress" />
        <action
            android:id="@+id/action_home_to_editAddress"
            app:destination="@id/editAddress" />
    </fragment>
    <fragment
        android:id="@+id/deliveryAddress"
        android:name="com.shoppitplus.shoppit.fragment.DeliveryAddress"
        android:label="fragment_delivery_address"
        tools:layout="@layout/fragment_delivery_address" />
    <fragment
        android:id="@+id/search"
        android:name="com.shoppitplus.shoppit.consumer.Search"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/cart"
        android:name="com.shoppitplus.shoppit.consumer.Cart"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cart_to_checkoutFragment"
            app:destination="@id/checkoutFragment" >
        <argument
            android:name="vendorId"
            app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/orders"
        android:name="com.shoppitplus.shoppit.consumer.Orders"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >

    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.shoppitplus.shoppit.consumer.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_editProfile"
            app:destination="@id/editProfile" />
        <action
            android:id="@+id/action_profile_to_editAddress"
            app:destination="@id/editAddress" />

        <action
            android:id="@+id/action_profile_to_orders"
            app:destination="@id/orders" />
        <action
            android:id="@+id/action_profile_to_orders2"
            app:destination="@id/orders" />
        <action
            android:id="@+id/action_profile_to_wallet"
            app:destination="@id/wallet" />
        <action
            android:id="@+id/action_profile_to_messages"
            app:destination="@id/messages" />
    </fragment>
    <fragment
        android:id="@+id/editProfile"
        android:name="com.shoppitplus.shoppit.consumer.EditProfile"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/editAddress"
        android:name="com.shoppitplus.shoppit.consumer.EditAddress"
        android:label="fragment_edit_address"
        tools:layout="@layout/fragment_edit_address" />

    <fragment
        android:id="@+id/fragment_order_note"
        android:name="com.shoppitplus.shoppit.consumer.fragment_order_note"
        android:label="fragment_order_note"
        tools:layout="@layout/fragment_order_note" />
    <fragment
        android:id="@+id/fragment_gift_form"
        android:name="com.shoppitplus.shoppit.consumer.fragment_gift_form"
        android:label="fragment_gift_form"
        tools:layout="@layout/fragment_gift_form" />
    <fragment
        android:id="@+id/fragment_paystack_webview"
        android:name="com.shoppitplus.shoppit.wallet.fragment_paystack_webview"
        android:label="fragment_paystack_webview"
        tools:layout="@layout/fragment_paystack_webview" />

    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.shoppitplus.shoppit.consumer.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout" >
        <action
            android:id="@+id/action_checkoutFragment_to_fragment_order_note"
            app:destination="@id/fragment_order_note" />
        <action
            android:id="@+id/action_checkoutFragment_to_fragment_gift_form"
            app:destination="@id/fragment_gift_form" />
        <action
            android:id="@+id/action_checkoutFragment_to_fragment_paystack_webview"
            app:destination="@id/fragment_paystack_webview" />
    </fragment>
    <fragment
        android:id="@+id/wallet"
        android:name="com.shoppitplus.shoppit.wallet.Wallet"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_wallet" >
        <action
            android:id="@+id/action_wallet_to_fragment_paystack_webview"
            app:destination="@id/fragment_paystack_webview" />
    </fragment>

    <fragment
        android:id="@+id/messages"
        android:name="com.shoppitplus.shoppit.messaging.MessagesFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_messages">
        <argument
            android:name="is_vendor"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_messages_to_conversation"
            app:destination="@id/conversation" />
    </fragment>

    <fragment
        android:id="@+id/conversation"
        android:name="com.shoppitplus.shoppit.messaging.ConversationFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_conversation">
        <argument
            android:name="conversation_id"
            app:argType="string" />
        <argument
            android:name="other_name"
            app:argType="string" />
        <argument
            android:name="is_vendor"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
</navigation>