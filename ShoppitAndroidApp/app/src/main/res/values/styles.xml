<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/medium</item>
    </style>

<style name="KeypadButton">
    <item name="android:layout_width">64dp</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:background">?attr/selectableItemBackground</item>
</style>

    <style name="RoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top_sheet_background</item>
    </style>

<style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/modal_background</item>
</style>

    <style name="OtpInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/otp_box</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>